<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.leviss.levi.myapplicationprueba.CrearUsuariosFragment">

    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Crear Contancto"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/imgViewUsuario"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/usuario"
            android:onClick="onImgClick"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CampoNombre"
            android:layout_marginTop="15dp"
            android:hint="Nombre del Usuario" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/CampoTelefono"
            android:layout_marginTop="15dp"
            android:hint="Número Telefónico" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/CampoEmail"
            android:layout_marginTop="15dp"
            android:hint="Correo Electrónico del Usuario" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/CampoDireccion"
            android:layout_marginTop="15dp"
            android:hint="Dirección del Usuario" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Agregar Usuario"
            android:id="@+id/BtnAgregar"
            android:layout_marginTop="15dp"
            android:onClick="onclick"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</ScrollView>
